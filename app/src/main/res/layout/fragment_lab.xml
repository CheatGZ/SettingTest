<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_dark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        style="@style/style_main_title"
        android:text="实验室功能" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:text="实验室功能说明"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/label_dev_mode"
                layout="@layout/view_label" />

            <include
                android:id="@+id/label_stop_virtual"
                layout="@layout/view_lab_second_label" />

            <include
                android:id="@+id/label_third_apk"
                layout="@layout/view_lab_second_label" />

            <include
                android:id="@+id/label_app_install"
                layout="@layout/view_label" />

            <include
                android:id="@+id/label_auto_wake"
                layout="@layout/view_label" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>