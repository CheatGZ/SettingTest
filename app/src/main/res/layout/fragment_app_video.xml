<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_5"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_24"
        android:layout_marginBottom="@dimen/margin_16"
        app:layout_constraintBottom_toTopOf="@id/slow_backward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <ImageView
        android:id="@+id/slow_backward"
        android:layout_width="@dimen/margin_20"
        android:layout_height="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginBottom="@dimen/margin_24"
        android:src="@mipmap/icon_placeholder_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/view_play"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:layout_marginStart="@dimen/margin_24"
        android:src="@mipmap/icon_placeholder_20"
        app:layout_constraintBottom_toBottomOf="@id/slow_backward"
        app:layout_constraintStart_toEndOf="@id/slow_backward"
        app:layout_constraintTop_toTopOf="@id/slow_backward" />

    <ImageView
        android:id="@+id/fast_forward"
        android:layout_width="@dimen/margin_20"
        android:layout_height="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_24"
        android:src="@mipmap/icon_placeholder_20"
        app:layout_constraintBottom_toBottomOf="@id/slow_backward"
        app:layout_constraintStart_toEndOf="@id/view_play" />

    <TextView
        android:id="@+id/video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24"
        android:text="00:08/00:20"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintBottom_toBottomOf="@id/slow_backward"
        app:layout_constraintStart_toEndOf="@id/fast_forward"
        app:layout_constraintTop_toTopOf="@id/slow_backward" />

    <ImageView
        android:id="@+id/video_volume"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:src="@mipmap/icon_placeholder_20"
        app:layout_constraintBottom_toBottomOf="@id/slow_backward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/slow_backward"
        android:layout_marginEnd="@dimen/margin_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>