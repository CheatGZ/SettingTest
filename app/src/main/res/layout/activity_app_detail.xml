<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_app_image"
        android:layout_width="830dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/tab_app_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/margin_30"
        android:layout_height="@dimen/margin_30"
        android:layout_margin="@dimen/margin_24"
        android:src="@mipmap/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/app_fore_image"
        android:layout_width="@dimen/margin_30"
        android:layout_height="@dimen/margin_30"
        android:layout_margin="@dimen/margin_24"
        android:layout_marginStart="@dimen/margin_24"
        android:src="@mipmap/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/view_pager_app_image"
        app:layout_constraintStart_toStartOf="@id/view_pager_app_image"
        app:layout_constraintTop_toTopOf="@id/view_pager_app_image" />

    <ImageView
        android:id="@+id/app_rear_image"
        android:layout_width="@dimen/margin_30"
        android:layout_height="@dimen/margin_30"
        android:layout_margin="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_24"
        android:src="@mipmap/ic_goto"
        app:layout_constraintBottom_toBottomOf="@id/view_pager_app_image"
        app:layout_constraintEnd_toEndOf="@id/view_pager_app_image"
        app:layout_constraintTop_toTopOf="@id/view_pager_app_image" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_app_img"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/view_pager_app_image"
        app:layout_constraintStart_toStartOf="@id/view_pager_app_image"
        app:layout_constraintTop_toBottomOf="@id/view_pager_app_image"
        app:tabPaddingEnd="@dimen/margin_0"
        app:tabPaddingStart="@dimen/margin_0" />

    <fragment
        android:id="@+id/nav_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="@dimen/margin_0"
        android:layout_height="@dimen/margin_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_pager_app_image"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/nav_graph_app_detail" />

    <include
        android:id="@+id/app_download"
        layout="@layout/app_download_button"
        android:layout_width="@dimen/margin_200"
        android:layout_height="@dimen/margin_60"
        android:layout_marginBottom="@dimen/margin_100"
        app:layout_constraintStart_toStartOf="@id/nav_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/nav_fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>