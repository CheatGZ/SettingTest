<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_fragment"
    tools:context=".Fragment.StoreManageFragment">

    <ImageView
        android:id="@+id/btn_back"
        style="@style/style_btn_back"
        android:src="@mipmap/ic_back"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title"
        style="@style/style_title_back"
        android:text="存储空间管理"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="@id/btn_back" />

    <com.example.settingtest.View.QiYuSpinner
        android:id="@+id/spinner_kind"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginEnd="35dp"
        android:entries="@array/spinner_kind"
        android:textSize="20sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@id/txt_title"
        app:layout_constraintEnd_toStartOf="@id/spinner_time"
        app:layout_constraintTop_toTopOf="@id/txt_title"
        android:background="@null"/>

    <com.example.settingtest.View.QiYuSpinner
        android:id="@+id/spinner_time"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginEnd="50dp"
        android:entries="@array/spinner_time"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/txt_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_title"
        android:background="@null"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rev_store_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title" />
</androidx.constraintlayout.widget.ConstraintLayout>