<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_dark">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray"
        android:orientation="vertical"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb_user"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:drawableTop="@mipmap/ic_default"
            android:paddingStart="50dp"
            android:paddingTop="20dp"
            android:text="Admin"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/rb_common"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:drawableStart="@mipmap/ic_default"
            android:drawablePadding="15dp"
            android:paddingStart="50dp"
            android:text="通用"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/rb_privacy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:drawableStart="@mipmap/ic_question"
            android:drawablePadding="15dp"
            android:paddingStart="50dp"
            android:text="隐私"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/rb_lab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:drawableStart="@mipmap/ic_question"
            android:drawablePadding="15dp"
            android:paddingStart="50dp"
            android:text="实验室功能"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </RadioGroup>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

<!--    <androidx.viewpager2.widget.ViewPager2-->
<!--        android:id="@+id/view_pager2_fragment"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"-->
<!--        android:orientation="vertical"-->
<!--        app:defaultNavHost="true"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toEndOf="@id/guide_line"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->

    <fragment
        android:id="@+id/fragment_nav"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guide_line"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/nav_graph_setting" />
</androidx.constraintlayout.widget.ConstraintLayout>