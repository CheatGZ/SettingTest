<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_28">

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_24"
        android:drawableStart="@mipmap/ic_back_20"
        android:drawablePadding="@dimen/margin_8"
        android:text="全部短评"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/filter_order"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_0"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_30"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabBackground="@android:color/transparent"
        app:tabRippleColor="@android:color/transparent"
        app:tabPaddingEnd="@dimen/margin_2"
        app:tabPaddingStart="@dimen/margin_2"
        app:tabSelectedTextColor="@color/text_color_primary"
        app:tabTextColor="@color/text_color_third" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/filter_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_30"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_marginEnd="@dimen/margin_8"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:tabPaddingEnd="@dimen/margin_8"
        app:tabPaddingStart="@dimen/margin_4"
        app:tabRippleColor="@android:color/transparent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rev_all_paragraph"
        android:layout_width="@dimen/margin_0"
        android:layout_height="@dimen/margin_0"
        android:layout_marginTop="@dimen/margin_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_type" />
</androidx.constraintlayout.widget.ConstraintLayout>