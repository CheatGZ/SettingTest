<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="248dp"
    android:layout_height="206dp"
    android:background="@android:color/holo_red_dark">

    <RelativeLayout
        android:layout_width="248dp"
        android:layout_height="206dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/ic_launcher">
        
        <ImageView
            android:id="@+id/card_item_248x206_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/card_item_248x206_poster_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/card_item_248x206_poster"
            android:layout_alignBottom="@id/card_item_248x206_poster"
            />

        <TextView
            android:id="@+id/card_item_248x206_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.6"
            android:layout_alignBottom="@id/card_item_248x206_poster_cover"
            />


        <TextView
            android:id="@+id/card_item_248x206_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主标题"
            android:layout_below="@id/card_item_248x206_poster"
            />
        <TextView
            android:id="@+id/card_item_248x206_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="副标题"
            android:layout_below="@id/card_item_248x206_title"
            />
    </RelativeLayout>

</RelativeLayout>
