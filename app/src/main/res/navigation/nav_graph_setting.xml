<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_setting"
    app:startDestination="@id/logInFragment">

    <fragment
        android:id="@+id/commonFragment"
        android:name="com.example.settingtest.Fragment.CommonFragment"
        android:label="fragment_common"
        tools:layout="@layout/fragment_common" >
        <action
            android:id="@+id/action_commonFragment_to_systemInfoFragment"
            app:destination="@id/systemInfoFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_commonFragment_to_aboutmachineFragment"
            app:destination="@id/aboutMachineFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"  />
    </fragment>
    <fragment
        android:id="@+id/systemInfoFragment"
        android:name="com.example.settingtest.Fragment.SystemInfoFragment"
        android:label="fragment_system_info"
        tools:layout="@layout/fragment_system_info" />
    <fragment
        android:id="@+id/aboutMachineFragment"
        android:name="com.example.settingtest.Fragment.AboutMachineFragment"
        android:label="fragment_aboutmachine"
        tools:layout="@layout/fragment_about_machine" >
        <action
            android:id="@+id/action_aboutMachineFragment_to_storeManageFragment"
            app:destination="@id/storeManageFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/storeManageFragment"
        android:name="com.example.settingtest.Fragment.StoreManageFragment"
        android:label="fragment_store_manage"
        tools:layout="@layout/fragment_store_manage" />



    <fragment
        android:id="@+id/privacyFragment"
        android:name="com.example.settingtest.Fragment.PrivacyFragment"
        tools:layout="@layout/fragment_privacy">
        <action
            android:id="@+id/action_privacy_fragment_to_privacy_statement_fragment"
            app:destination="@id/privacy_statement_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_privacy_fragment_to_app_manage_fragment"
            app:destination="@id/app_manage_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right">
            <argument
                android:name="appId"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/privacy_statement_fragment"
        android:name="com.example.settingtest.Fragment.PrivacyStatementFragment"
        tools:layout="@layout/fragment_privacy_statement" />
    <fragment
        android:id="@+id/app_manage_fragment"
        android:name="com.example.settingtest.Fragment.AppAuthorityManageFragment"
        tools:layout="@layout/fragment_app_manage">
        <argument
            android:name="appId"
            app:argType="string" />
    </fragment>


    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.settingtest.Fragment.LogInFragment"
        tools:layout="@layout/fragment_log_in">

        <action
            android:id="@+id/action_logInFragment_to_userFragment"
            app:destination="@id/userFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.settingtest.Fragment.UserFragment"
        android:label="UserFragment" />
</navigation>