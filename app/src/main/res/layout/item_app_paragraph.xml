<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/margin_256"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/gray_31"
    app:cardCornerRadius="@dimen/margin_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/commend_paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green_accent"
            android:drawableStart="@mipmap/icon_placeholder_20"
            android:paddingStart="@dimen/margin_8"
            android:paddingTop="@dimen/margin_4"
            android:paddingEnd="@dimen/margin_8"
            android:paddingBottom="@dimen/margin_4"
            android:text="推荐"
            android:drawablePadding="@dimen/margin_8"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/paragraph_info"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_third"
            android:textSize="@dimen/text_size_13"
            app:layout_constraintBottom_toBottomOf="@id/commend_paragraph"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/commend_paragraph"
            tools:text="用户ID·评论时间" />

        <TextView
            android:id="@+id/paragraph_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_color_third"
            android:textSize="@dimen/text_size_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/commend_paragraph" />

        <TextView
            android:id="@+id/evaluate_interesting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paragraph_content"
            tools:text="有趣 50" />

        <TextView
            android:id="@+id/evaluate_useful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_24"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintStart_toEndOf="@id/evaluate_interesting"
            app:layout_constraintTop_toTopOf="@id/evaluate_interesting"
            tools:text="有用 50" />

        <TextView
            android:id="@+id/evaluate_useless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_24"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintStart_toEndOf="@id/evaluate_useful"
            app:layout_constraintTop_toTopOf="@id/evaluate_interesting"
            tools:text="无用 50" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
